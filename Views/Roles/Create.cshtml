@{
	ViewData["Tittle"] = "Создание роли";
}
@model string

<style>
	header {
		display: none !important;
	}
</style>

<div class="container mt-5">
    <h2 class="mb-4">Добавление новой роли</h2>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Главная</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="User">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Roles">Roles</a></li>
            <li class="breadcrumb-item active">Create</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" method="post">
                <div class="form-group mb-2">
                    <label for="name" class="control-label">Новая роль</label>
                    <input id="name" name="name" class="form-control" required />
                    <span oninvalid="name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success"><i class="bi bi-key-fill"></i> Создать</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-x-circle-fill"></i> Отмена</a>
                </div>
            </form>
        </div>
    </div>
</div>