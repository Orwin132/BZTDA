@using Microsoft.AspNetCore.Identity
@{
	ViewData["Title"] = "Редактирование роли пользователю";
}
@model NardSmena.Models.ChangeRoleViewModel

<style>
	header {
		display: none !important;
	}

    .form-group {
        font-size: 1.5em;
    }

    input[type="checkbox"]:checked {
        background-color: red !important;
        border: none;
        box-shadow: none;
    }

    input[type="checkbox"]:focus {
        box-shadow: none;
    }
</style>

<div class="container mt-5">
    <h2 class="mb-4">Изменение роли для @Model.UserName</h2>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Главная</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="User">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Roles">Roles</a></li>
            <li class="breadcrumb-item"><a asp-action="UserList" asp-controller="Roles">UserList</a></li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" method="post">
                <input type="hidden" name="userId" value="@Model.UserId" />
                <div class="form-group mt-2">
                    <label asp-for="UserRoles" class="control-label">Роли</label>

                    <div class="row">
                        @foreach (IdentityRole role in Model.AllRoles)
                        {
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" name="roles" value="@role.Name"
                                    @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="form-group mt-3">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-outline-success me-3"><i class="bi bi-save-fill"></i> Сохранить</button>
                            <a asp-action="UserList" class="btn btn-outline-danger"><i class="bi bi-x-circle-fill"></i> Отмена</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>