@{
    ViewData["Title"] = "Печать";
    var dateTime = DateTime.Now;
    var date = DateOnly.FromDateTime(dateTime);
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
}

<style>
    header {
        display: none;
    }

    footer {
        display: none;
    }

    .profession {
        margin-right: 40px;
        text-align: center;
    }

    .signature {
        margin-top: 25px;
        text-align: center;
    }

    .text-border-bottom {
        border-bottom: 1px solid black;
        width: 150px;
        margin: 0 auto;
        display: block;
    }

    .signature p {
        margin: 0;
        padding: 0;
        font-size: 11px;
    }

    .roboto-light {
        font-family: "Roboto", sans-serif;
        font-weight: 300;
        font-style: normal;
    }
</style>

<div class="container-fluid">
    <div class="row mt-3 mb-4">
        <div class="container d-flex align-items-end justify-content-end mt-5">
            <a asp-action="SprOperation" asp-controller="Home" class="link-danger text-decoration-none" id="text-back"><i class="bi bi-arrow-left"></i> Вернуться</a>
        </div>
        <div class="col-6">
            <div class="container d-flex align-items-start justify-content-start mt-3">
                <span class="text-nameOrganization">Наименование организации: ОАО "ТДиА"</span>
            </div>
        </div>
        <div class="col-6">
            <div class="container d-flex align-items-end justify-content-end mt-3">
                <span class="text-datetime">Текущая дата: @date</span>
            </div>
        </div>
        <div class="col-12">
            <div class="container d-flex align-items-center justify-content-center">
                <img id="logo" src="~/logo.png" width="128" height="128" />
            </div>
        </div>
        <div class="col-12">
            <div class="container d-flex align-items-center justify-content-center">
                <h1 id="printTitle" class="display-2 text-center">@ViewData["PrintTitle"]</h1>
            </div>
        </div>
    </div>
    <form id="printSettingsForm" class="mb-3">
        <div class="container d-flex align-items-end justify-content-end">
            <button type="button" class="btn btn-outline-danger" id="btnPrint"><i class="bi bi-printer"></i> Печать</button>
        </div>
    </form>

    <div class="d-flex align-items-center justify-content-center mb-4">
        <table class="table table-striped text-center">
            <thead>
                <tr>
                    <th scope="col">Уч-к</th>
                    <th scope="col">Профессия</th>
                    <th scope="col">Код оплаты</th>
                    <th scope="col">Отраб. время</th>
                    <th scope="col">Норма времени</th>
                    <th scope="col">Процент выработки</th>
                    <th scope="col">Сумма</th>
                    <th scope="col">Количество работающих</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
    <div class="d-flex align-items-center justify-content-center mt-5">
        <div class="profession">
            <p class="roboto-medium">БОТИЗ</p>
            <div class="signature">
                <p class="text-border-bottom"></p>
                <p class="mt-2 mb-3 roboto-light">подпись</p>
                <p class="text-border-bottom"></p>
                <p class="mt-1 roboto-light">фамилия, инициалы</p>
            </div>
        </div>
        <div class="profession">
            <p class="roboto-medium">Мастер</p>
            <div class="signature">
                <p class="text-border-bottom"></p>
                <p class="mt-2 mb-3 roboto-light">подпись</p>
                <p class="text-border-bottom"></p>
                <p class="mt-1 roboto-light">фамилия, инициалы</p>
            </div>
        </div>
        <div class="profession">
            <p class="roboto-medium">Оператор ПЭВМ</p>
            <div class="signature">
                <p class="text-border-bottom"></p>
                <p class="mt-2 mb-3 roboto-light">подпись</p>
                <p class="text-border-bottom"></p>
                <p class="mt-1 roboto-light">фамилия, инициалы</p>
            </div>
        </div>
    </div>
</div>

<script>
    $('#btnPrint').click(function () {
        $('#btnPrint').hide();
        $('#text-back').hide();
        window.print();
    });

    $(window).on('afterprint', function () {
        $('#btnPrint').show();
        $('#text-back').show();
    });
</script>