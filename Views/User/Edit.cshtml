@{
	ViewData["Title"] = "Редактирование пользователя";
}

<style>
    header {
        display: none !important;
    }
</style>

@model NardSmena.Models.EditUserViewModel

<div class="container mt-5">
    <h2 class="mb-4">Редактирование пользователя</h2>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Главная</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="User">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-action="UserManagement" asp-contoller"User">UserManagement</a></li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="UserName" class="control-label">Логин</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                    <label asp-for="FIO" class="control-label">ФИО</label>
                    <input asp-for="FIO" class="form-control" />
                    <span asp-validation-for="FIO" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                    <label asp-for="Department" class="control-label">Отделение</label>
                    <input asp-for="Department" class="form-control" />
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                    <button type="submit" class="btn btn-success"><i class="bi bi-save-fill"></i> Сохранить</button>
                    <a asp-action="UserManagement" class="btn btn-secondary"><i class="bi bi-x-circle-fill"></i> Отмена</a>
                </div>
            </form>
        </div>
    </div>
</div>