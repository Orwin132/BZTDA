@{
	ViewData["Title"] = "Добавление пользователя";
}

<style>
    header {
        display: none !important;
    }

    .focus-ring:focus {
        box-shadow: 0 0 0 0.2rem rgba(255, 0, 0, 0.35);
        border-color: lightcoral;
    }

    footer {
        display: none !important;
    }
</style>

@model NardSmena.Models.CreateUserViewModel

<div class="container mt-5">
    <h2 class="mb-4">Добавление нового пользователя</h2>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Главная</a></li>
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="User">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-action="UserManagement" asp-contoller="User">UserManagement</a></li>
            <li class="breadcrumb-item active">Create</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" method="post">
                <div class="form-group mb-2">
                    <label asp-for="UserName" class="control-label">Логин</label>
                    <input asp-for="UserName" class="form-control focus-ring" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <label asp-for="FIO" class="control-label">ФИО</label>
                    <input asp-for="FIO" class="form-control focus-ring" />
                    <span asp-validation-for="FIO" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <label asp-for="Department" class="control-label">Отделение</label>
                    <input asp-for="Department" class="form-control focus-ring" />
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>

                <div class="form-group mb-2">
                    <label asp-for="Password" class="control-label">Пароль</label>
                    <input asp-for="Password" type="password" class="form-control focus-ring" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-outline-success me-3"><i class="bi bi-person-fill-add"></i> Создать</button>
                            <a asp-action="UserManagement" class="btn btn-outline-danger"><i class="bi bi-x-circle-fill"></i> Отмена</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>