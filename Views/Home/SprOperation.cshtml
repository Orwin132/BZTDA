                                                    <tr>
                                                        <td>@otpVred.ProcDopl</td>
                                                        <td>@otpVred.GodOtpVr</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


