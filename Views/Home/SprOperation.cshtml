                                <th>Выбор</th>
                                <th>Код детали</th>
                                <th>Наименование</th>
                                <th>Шифр</th>
                                <th>Общее время</th>
                                <th>Расценка</th>
                            </tr>
                        </thead>
                        <tbody class="text-center" id="tbody2">
                            @foreach (var sprOper in Model.SprOperList)
                            {
                                var sprDet = Model.SprDetList.FirstOrDefault(d => d.KodDetal == sprOper.KodDetal);
